		.fixed-action-btn-menu { position: fixed; top: 36px; left: 28px; width: 56px; height: 56px; }
		.tabs { border-bottom: 1px solid #dddddd; }
		.tabs .indicator { display: none; }
		.tabs .tab a, .tabs .tab a:hover { color: #000000; }
