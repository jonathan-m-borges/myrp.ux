		.logo { height: 36px; margin: 14px; }
		nav ul li a { text-transform: uppercase; font-size: 0.8rem; font-weight: bold; }
		.menu { position: fixed; top: 0; left: 0; height: 100%; width: 56px; border: 0px; padding-top: 120px; text-align: center; }
		.title { font-size: 1.64rem; height:64px; line-height: 64px; }
